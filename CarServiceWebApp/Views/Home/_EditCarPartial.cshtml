@model CarViewModel

@{
    ViewBag.Title = "Edit Car";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form asp-action="Add" method="post">
            <div class="mb-3">
                <label asp-for="@Model.Brand" class="form-label-add-edit">Brand: </label>
                <input asp-for="@Model.Brand" class="form-control" aria-required="true"  autocomplete=off/>
                <span asp-validation-for="@Model.Brand" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.Color" class="form-label-add-edit">Color: </label>
                <textarea asp-for="@Model.Color" class="form-control" aria-required="true"  autocomplete=off></textarea>
                <span asp-validation-for="@Model.Color" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.RegistrationNumber" class="form-label-add-edit">Registration Number: </label>
                <input asp-for="@Model.RegistrationNumber" class="form-control" aria-required="true"  autocomplete=off/>
                <span asp-validation-for="@Model.RegistrationNumber" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <button asp-controller="CarService" asp-action="EditCar"  type="submit" class="btn btn-warning mb-2 w-100 p-3 fw-bold">Edit Car</button>
            </div>
        </form>
    </div>
</div>


@section Scripts {
        <partial name="_ValidationScriptsPartial" />
}